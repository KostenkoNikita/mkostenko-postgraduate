{
  "name": "rust-node-bridge",
  "version": "0.1.0",
  "description": "",
  "main": "index.node",
  "scripts": {
    "clean:build": "cd node_modules/.bin && rimraf ../../bin",
    "clean:artifact": "cd node_modules/.bin && rimraf ../../index.node",
    "build:native": "cargo-cp-artifact -nc ./bin/index.node -- cargo build --message-format=json-render-diagnostics",
    "build:js": "cd node_modules/.bin && tsc -p ../../tsconfig.json",
    "build": "npm run clean:build && npm run build:native && npm run clean:artifact && npm run build:js",
    "install": "npm run build",
    "test": "cargo test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cargo-cp-artifact": "0.1",
    "rimraf": "3.0.2",
    "@types/node": "16.0.0",
    "typescript": "4.3.5"
  }
}
